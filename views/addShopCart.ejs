<% include ./personal_header.ejs%>
    <section>
        <div class="shop-page page">
            <div class="container">
                <div class="page-content">
                    <div class="panel">
                        <div class="panel-body add-shop-body">
                            <div></div>
                            <div class="row">
                                <div class="col-md-6 page-left">
                                    <div class="media">
                                        <div class="media-left">
                                            <a href="">
                                                <img :src=shopSingle.img alt="">
                                            </a>
                                        </div>
                                        <div class="media-body">
                                            <div></div>
                                            <h4 class="media-heading">
                                                <a href="">{{shopSingle.title}}</a> &nbsp;&nbsp;&nbsp;数量：{{shopSingle.value}} 件
                                            </h4>
                                            <p class="success-tit">已成功加入购物车！</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 page-right">
                                    <div class="tocar-btn-body">
                                        <a href="./index" class="btn btn-default btn-lg btn-squared btn-a01">继续购物</a>
                                        <a href="#" class="btn btn-danger btn-lg btn-squared" @click="goSettle">去购物车结算</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="settle-shop shop-hide">
                            <div class="cart-body">
                                <div class="table-responsive">
                                    <table class="table table-hover table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <div class="checkbox-danger">
                                                        
                                                    </div>
                                                </th>
                                                <th>商品</th>
                                                <th>单价</th>
                                                <th>数量</th>
                                                <th>小计</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr :_id=item.id class="shop-tr" v-for="(item, index) in shopAll">
                                                <td class="check-td">
                                                    <div class="checkbox-danger shop-tr-box">
                                                        <input type="checkbox" class="sel" readonly="readonly">
                                                        <i class="ico iconfont sel-ico" @click="check(item,index)"></i>
                                                    </div>
                                                </td>
                                                <td class="shop-mes">
                                                    <div class="col-xs-12 settle-shop-mes">
                                                        <div class="col-xs-3 col-md-offset-1 set-left">
                                                            <a href="/shopCart" @click='toShopCart(index,item.id)'>
                                                                <img :src=item.img alt="">
                                                            </a>
                                                        </div>
                                                        <div class="col-xs-8 set-right">
                                                            <h4>
                                                                <a href="/shopCart" @click='toShopCart(index,item.id)'>
                                                                    {{item.title}}</a>
                                                            </h4>
                                                            <p class="price-p">{{item.price | filPrice}}</p>
                                                            <div class="buyNumber is-buy">
                                                        <div class="input-box">
                                                            <span class="group-sub" @click="changeShop(item, 0)"> - </span>
                                                            <input type="text" v-model="item.value" readonly="readonly">
                                                            <span class="group-add" @click="changeShop(item, 1)"> + </span>
                                                        </div>
                                                    </div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="price-td">{{item.price | filPrice}}</td>
                                                <td class="change-td">
                                                    <div class="buyNumber">
                                                        <div class="input-box">
                                                            <span class="group-sub" @click="changeShop(item, 0)"> - </span>
                                                            <input type="text" v-model="item.value" readonly="readonly">
                                                            <span class="group-add" @click="changeShop(item, 1)"> + </span>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="total-td">
                                                    <span class="smallSum">{{item.price * item.value | filPrice}}</span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="cart-total shop-hide">
                        <div class="row total-body">
                            <div class="col-md-3 cart-all">
                                <div class="checkbox-danger cart-all-box all-box">
                                    <input type="checkbox">
                                    <i class="ico iconfont all" @click="checkAll()"></i>
                                    <span>全选</span>
                                </div>
                                <div class="call" @click="callAll()">
                                    <span>取消全选</span>
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-6 total-text-right">
                                <span>共
                                    <span class="value">{{num}}</span> 件商品，合计：
                                </span>
                                <span class="total">{{shopTotal | filPrice}}</span>
                            </div>
                            <div class="col-md-3 col-xs-12 total-text-right">
                                <a href="#" class="btn btn-lg btn-squared btn-danger cart-tocheck"
                                @click="toPay()">去结算</a>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <h3 class="tit-user">购买该商品的用户还购买了</h3>
                        <ul class="col-xs-12 recommend-shop">
                            <li class="col-md-3 col-xs-6 recommend-single" v-for="(item,index) of shopList"
                                :key=item.id>
                                <div class="single-body">
                                    <div style="display: none" class="get-id">{{item.id}}</div>
                                    <a href="./shopCart">
                                        <img :src=item.phoneImg[0].img alt="" :title=item.content.title
                                        @load="toShop(index)">
                                    </a>
                                    <h4 class="card-title">
                                        <a href="./shopCart">{{item.content.title}}</a>
                                        <p>{{item.content.price}}</p>
                                    </h4>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="./js/addShop/addShop_vue.js"></script>
<%include ./footer2.ejs%>

